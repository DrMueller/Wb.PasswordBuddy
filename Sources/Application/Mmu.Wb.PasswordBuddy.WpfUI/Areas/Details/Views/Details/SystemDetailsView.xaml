<UserControl x:Class="Mmu.Wb.PasswordBuddy.WpfUI.Areas.Details.Views.Details.SystemDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mmu.Wb.PasswordBuddy.WpfUI.Areas.Details"
             xmlns:controls="clr-namespace:Mmu.Mlh.WpfCoreExtensions.Areas.MvvmShell.CommandManagement.Components.CommandBars.Controls;assembly=Mmu.Mlh.WpfCoreExtensions"
             xmlns:systemData="clr-namespace:Mmu.Wb.PasswordBuddy.WpfUI.Areas.Details.Views.SystemData"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
 <Grid>
  <Grid.RowDefinitions>
   <RowDefinition Height="Auto" />
   <RowDefinition Height="*" />
  </Grid.RowDefinitions>

  <controls:CommandBar Grid.Row="0" Commands="{Binding Path=Commands, Mode=OneWay}" />

  <Grid Grid.Row="1">
            <systemData:SystemDataView DataContext="{Binding SystemData}" />
  </Grid>
 </Grid>
</UserControl>
